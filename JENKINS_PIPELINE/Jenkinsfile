pipeline {
    agent any

    environment {
        PATH = "/venv/bin:$PATH" // Ensure the virtual environment path is available
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'python3 -m pip install --upgrade pip'
                sh 'python3 -m pip install -r requirements.txt'
            }
        }

        stage('Lint') {
            steps {
                sh 'python3 -m py_compile lib/*.py lib/src/*.py'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest --junit-xml=test-reports/results.xml tests/'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }

        stage('Package') {
            steps {
                sh 'pyinstaller --onefile lib/src/main.py --name password_checker'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'dist/password_checker', fingerprint: true
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
