pipeline {
    agent any

    environment {
        VENV_PATH = "${WORKSPACE}/venv/bin"
        PATH = "${VENV_PATH}:${env.PATH}"
        DIST_PATH = "${WORKSPACE}/dist" 
    }

    stages {
        stage('Setup Virtualenv & Install Dependencies') {
            steps {
                script {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install pyinstaller
                        pip install fastapi
                        pip install uvicorn
                        pip install pydantic
                    '''
                }
            }
        }

        stage('Build Package') {
            steps {
                script {
                    sh '''
                        . venv/bin/activate
                        pyinstaller --onefile --distpath ${DIST_PATH} JENKINS_PIPELINE/src/main.py --name password_checker
                    '''
                }
            }
        }

        stage('Archive') {
            steps {
                script {
                    archiveArtifacts artifacts: 'dist/password_checker', fingerprint: true
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
