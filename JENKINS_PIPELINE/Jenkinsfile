pipeline {
    agent any

    environment {
        VENV_PATH = "${WORKSPACE}/venv/bin"
        PATH = "${VENV_PATH}:${env.PATH}"
        DIR = "./PasswordDIR/"
    }

    stages {
        stage('Setup Virtualenv & Install Dependencies') {
            steps {
                script {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install pyinstaller
                        pip install fastapi
                        pip install uvicorn
                        pip install pydantic
                    '''
                }
            }
        }

        stage('Build Package') {
            steps {
                script {
                    sh '''
                        . venv/bin/activate
                        rm -rf bin/*
                        mkdir $DIR
                        pyinstaller -y JENKINS_PIPELINE/src/main.py --distpath $DIR/bin --name password_checker --paths=JENKINS_PIPELINE/lib/*  
                    '''
                }
            }
        }

        stage('Archive') {
            steps {
                script {
                    archiveArtifacts artifacts: 'bin/**', fingerprint: true  
                }
            }
        }
    }

}
