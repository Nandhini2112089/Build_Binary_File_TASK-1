pipeline {
    agent any

    environment {
        VENV_PATH = "venv"
        PATH = "${env.WORKSPACE}/venv/bin:$PATH"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install fastapi uvicorn pydantic pytest pyinstaller
                '''
            }
        }

        stage('Lint') {
            steps {
                sh '''
                    . venv/bin/activate
                    for dir in lib src tests; do
                        if [ -d "$dir" ]; then
                            find "$dir" -name "*.py" -exec python3 -m py_compile {} +
                        fi
                    done
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    . venv/bin/activate
                    mkdir -p test-reports
                    pytest --junit-xml=test-reports/results.xml tests/ || true
                '''
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }

        stage('Package') {
            steps {
                sh '''
                    . venv/bin/activate
                    pyinstaller --onefile src/main.py --name password_checker
                '''
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'dist/password_checker', fingerprint: true
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
