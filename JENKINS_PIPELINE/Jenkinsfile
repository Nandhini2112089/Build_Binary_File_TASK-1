pipeline {
    agent {
        docker {
            image 'docker:latest'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        BUILD_SCRIPT = 'JENKINS_PIPELINE/build.sh'
    }

    stages {
        stage('Clone Repo') {
            steps {
                echo 'Repository already checked out by Jenkins'
            }
        }

        stage('Show Docker Version') {
            steps {
                sh 'docker --version'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t password-checker -f JENKINS_PIPELINE/Dockerfile JENKINS_PIPELINE'
            }
        }

        stage('Run Build Script Inside Docker') {
            steps {
                sh '''
                    docker run --rm -v $(pwd):/app -w /app password-checker bash $BUILD_SCRIPT
                '''
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished!'
        }
        failure {
            echo 'Build failed.'
        }
        success {
            echo 'Build succeeded.'
        }
    }
}
