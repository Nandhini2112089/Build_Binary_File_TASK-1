pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'        
            dir 'JENKINS_PIPELINE'        
            additionalBuildArgs ''
        }
    }

    environment {
        BINARY_NAME = "password_checker"
        BINARY_PATH = "bin/password_checker"
    }

    stages {
        stage('Clone Repo') {
            steps {
                checkout scm
            }
        }

        stage('Build Binary') {
            steps {
                dir('JENKINS_PIPELINE') {
                    sh './build.sh'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('JENKINS_PIPELINE') {
                    sh 'docker build -t password-checker-app .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                sh 'docker run -d --rm -p 8090:8080 --name password-checker password-checker-app'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished!'
        }
    }
}
