pipeline {
    agent any

    environment {
        VENV_PATH = "${WORKSPACE}/venv/bin"
        PATH = "${VENV_PATH}:${env.PATH}"
    }

    stages {
        stage('Setup Virtualenv & Install Dependencies') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install pyinstaller
                '''
            }
        }

        stage('Build Package') {
            steps {
                sh '''
                    . venv/bin/activate
                      pyinstaller --onefile JENKINS_PIPELINE/src/main.py --name password_checker

                '''
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'dist/password_checker', fingerprint: true
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
