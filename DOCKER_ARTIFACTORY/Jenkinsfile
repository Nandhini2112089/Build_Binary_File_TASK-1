pipeline {
    agent any  // Use 'any' if Docker plugin is not available

    environment {
        IMAGE_NAME = 'password-checker-app'
    }

    stages {
        stage('Install System Packages and Python Dependencies') {
            steps {
                script {
                    // Run as root or with sudo if necessary
                    sh '''
                        # Fix permissions and update apt lists
                        sudo apt-get update || true
                        sudo apt-get install -y python3 python3-pip gcc make unzip docker.io

                        # Ensure pip is installed
                        python3 -m pip install --upgrade pip

                        # Install required Python packages
                        pip3 install --no-cache-dir pyinstaller fastapi uvicorn pydantic
                    '''
                }
            }
        }

        stage('Run Build Script') {
            steps {
                sh '''
                    chmod +x ./build.sh
                    ./build.sh
                '''
            }
        }

        stage('Run Unit Tests') {
            steps {
                sh '''
                    python3 -m unittest discover -s ./DOCKER_ARTIFACTORY/tests -p "test_validator.py"
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh 'docker run -d -p 8099:8081 $IMAGE_NAME'
            }
        }
    }
}
